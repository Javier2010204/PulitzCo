.row.center-xs.middle-xs.full-height
	.col-xs-12.col-sm-6.col-lg-4.green-dark-text
		.box.large-padding.mdl-shadow--2dp.white
			%h2 Actualizar mi perfil
			=form_for @usuario do |f|
				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					=f.label :email, class: 'mdl-textfield__label'
					=f.text_field :email, class: 'mdl-textfield__input'
				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					=f.label 'nombre completo', class: 'mdl-textfield__label'
					=f.text_field :full_name, class: 'mdl-textfield__input'
				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					=f.label :bio, class: 'mdl-textfield__label'
					=f.text_area :bio, class: 'mdl-textfield__input'
				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					=f.label :grade, class: 'mdl-textfield__label'
					=f.text_field :grade, class: 'mdl-textfield__input'
				.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
					=f.file_field :avatar, class: 'mdl-textfield__input'
				.top-space
					= image_tag @usuario.avatar(:thumb)
				.action.text-right
					=f.submit 'Guardar', class: 'mdl-button mdl-js-button mdl-button--raised mdl-button--colored'